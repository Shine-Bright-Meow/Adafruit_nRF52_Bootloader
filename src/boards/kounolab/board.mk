MCU_SUB_VARIANT = nrf52820
SOFTDEVICE_VERSION = 7.3.0

# nRF52820 specific settings
CFLAGS += -DNRF52820_XXAA
CFLAGS += -DS132
ASMFLAGS += -DNRF52820_XXAA
ASMFLAGS += -DS132

# Flash size for nRF52820 (256KB)
LINKER_SCRIPT = $(LINKER_SCRIPTS_DIR)/nrf52820_s132_v7.ld

# No USB support for nRF52820
USB = 0